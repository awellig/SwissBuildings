{
  "name": "swiss-buildings-explorer",
  "version": "1.0.0",
  "description": "Professional React application for visualizing Swiss buildings with 3D mapping capabilities",
  "main": "index.js",
  "scripts": {
    "install:all": "cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npx ts-node server.ts",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && npx tsc",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && node dist/server.js",
    "test": "echo \"No tests specified\"",
    "clean": "rm -rf frontend/node_modules backend/node_modules frontend/dist backend/dist"
  },
  "keywords": [
    "react",
    "typescript",
    "swiss",
    "buildings",
    "3d",
    "mapping",
    "capgemini",
    "swisstopo"
  ],
  "author": "Capgemini",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}